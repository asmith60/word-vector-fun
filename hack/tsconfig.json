{
  "compilerOptions": {
    "baseUrl": "src",
    "alwaysStrict": true,
    "declaration": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "sourceMap": true,
    "lib": [
      "es2018",
      "ES2020.Promise"
    ],
    "module": "CommonJS",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "stripInternal": true,
    "target": "ES2018"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
